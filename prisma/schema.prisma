generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Exemplo de modelo
model Bruxo {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  age       Int?
  dead      Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("bruxo")
}
